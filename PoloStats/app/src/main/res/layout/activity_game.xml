<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".GameActivity">

        <LinearLayout
            android:weightSum="106.2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/gcapNumber"
                android:text="#"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="11.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gplayerName"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9.7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ggoals"
                android:text="G"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gattempts"
                android:text="S/A"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gshotPercent"
                android:text="%"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gassists"
                android:text="A"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gdrawnEjections"
                android:text="DXE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gejections"
                android:text="EX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gsteals"
                android:text="S"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gfBlocks"
                android:text="B"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10.5"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

</RelativeLayout>